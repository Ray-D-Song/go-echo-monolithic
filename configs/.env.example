# Server Configuration
SERVER_PORT=8080
SERVER_ENVIRONMENT=development
SERVER_HOST=localhost

# Database Configuration
DATABASE_TYPE=sqlite
DATABASE_DSN=./data.db

# For MySQL (uncomment to use)
# DATABASE_TYPE=mysql
# DATABASE_DSN=user:password@tcp(localhost:3306)/dbname?charset=utf8mb4&parseTime=True&loc=Local

# For PostgreSQL (uncomment to use)
# DATABASE_TYPE=postgres
# DATABASE_DSN=host=localhost user=user password=password dbname=dbname port=5432 sslmode=disable TimeZone=UTC

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_TOKEN_DURATION=15m
JWT_REFRESH_TOKEN_DURATION=168h

# Logger Configuration
LOGGER_LEVEL=info
LOGGER_ENCODING=json
LOGGER_OUTPUT_PATHS=stdout
LOGGER_ERROR_OUTPUT_PATHS=stderr